<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.showme.android.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.showme.android.finalproject.Login.LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.showme.android.finalproject.MainActivity"
            android:windowSoftInputMode="stateVisible|adjustResize"

            />
        <activity
            android:name=".ChatRoomActivity"
            android:label="@string/title_activity_chat_room"
            android:theme="@style/AppTheme" />
    </application>

</manifest>
